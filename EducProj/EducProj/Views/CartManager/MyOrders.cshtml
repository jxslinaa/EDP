@model IList<EducProj.Models.Orders>
@{
    ViewData["Title"] = "My Orders";
}
<div id="content-wrapper">
    <div class="container-fluid">
       
        <div class="card mb-3">
            <div class="card-header">
                My Orders (Max of Recently created 10 orders)
            </div>
            <div class="card-body">
                @{
                    if (!String.IsNullOrEmpty(Context.Request.Query["msg"])) {
                            <div class="alert alert-info" role="alert">
                                @Context.Request.Query["msg"]
                                <a href="../CartManager/MyOrders">Clear</a>
                            </div>
                    }
                }

                    <div class="col-sm-12  pl-0 ml-0">

                        <div class="col-sm-6 float-right">

                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table descriptiontable table-bordered" id="dataTable" style="width:100%;font-size: 14px;" cellspacing="0">
                            <thead class="thead-light">
                                <tr>
                                    <th>
                                        SI.No
                                    </th>
                                    <th>
                                        Summary
                                    </th>
                                    <th style=" width: 13%;">
                                        Created Date
                                    </th>
                                    <th style=" width: 8%;">
                                        Payment Status
                                    </th>

                                    <th style=" width: 13%;">
                                        Total Amount
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @if (Model.Count >= 1)
                                                            {
                                                                int i = 1;
                                                                foreach (EducProj.Models.Orders orderDetails in Model)
                                                                {
                                <tr>
                                    <td style="vertical-align: middle;">
                                        <a href="../CartManager/previewOrder?orderId=@orderDetails.CartId">@i</a>
                                    
                                    </td>
                                    <td style="vertical-align: middle;">
                                        @if (orderDetails.orderItems != null && orderDetails.orderItems.Count >= 1)
                                                                            {
                                        <ul class="list-group">
                                            @foreach (EducProj.Models.OrderItems items in orderDetails.orderItems)
                                                                                        {
                                            <li class="list-group-item">@items.productTitle</li>
                                                                                        }
                                        </ul>
}
                                    </td>
                                    <td style="vertical-align: middle;">@orderDetails.CreatedDate</td>
                                    <td style="vertical-align: middle;">PAID</td>


                                    <td style="vertical-align: middle;">@orderDetails.CartTotal</td>
                                </tr>
i = i + 1;
                                                                }
                                                            }
                                                            else
{
                                    <tr><td colspan="6" class="text-center">No Records found</td></tr>
}
                            </tbody>

                        </table>


                    </div>


                </div>


            <div class="card-footer small text-muted">

            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
    <!-- Sticky Footer -->
   
</div>

